# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET           /student/:id                  controllers.StudentManagement.getStudent(id: String)

POST          /student                      controllers.StudentManagement.student()

POST          /student/:id                  controllers.StudentManagement.updateStudent(id: String)

DELETE        /student/:id                  controllers.StudentManagement.removeStudent(id: String)

GET           /students                     controllers.StudentManagement.listStudents()

GET           /course/:id                   controllers.CourseManagement.getCourse(id: String)

POST          /course                       controllers.CourseManagement.course()

POST          /course/:id                   controllers.CourseManagement.updateCourse(id: String)

DELETE        /course/:id                   controllers.CourseManagement.removeCourse(id: String)

GET           /courses                      controllers.CourseManagement.listCourses()

GET           /management/students          controllers.Application.studentManagement()

GET           /management/programmes        controllers.Application.programmeManagement()

GET           /management/courses           controllers.Application.courseManagement()



# Enable webjar based resources to be returned
GET           /webjars/*file                controllers.WebJarAssets.at(file)

# Map the JS resource paths
GET           /*file                        controllers.Assets.at(path="/public", file)

